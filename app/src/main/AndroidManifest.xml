<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyectodepspot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoDepSpot"
        tools:targetApi="31">
        
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoDepSpot.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.ProyectoDepSpot.NoActionBar" />

        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <activity
            android:name=".EmergencyContactPromptActivity"
            android:exported="false"
            android:theme="@style/Theme.ProyectoDepSpot.NoActionBar" />

        <activity
            android:name=".AddEmergencyContactActivity"
            android:exported="false"
            android:theme="@style/Theme.ProyectoDepSpot.NoActionBar" />

        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".AjustesActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".RedApoyoActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".GestionarCuentaActivity"
            android:exported="false" />

        <activity
            android:name=".EvaluacionDepresionActivity"
            android:exported="false" />

        <activity
            android:name=".TestDepresionActivity"
            android:exported="false" />

        <activity
            android:name=".NotificacionesActivity"
            android:exported="false" />

        <activity
            android:name=".RegistroActivity"
            android:exported="false" />

        <activity
            android:name=".BitacoraEmocionalActivity"
            android:exported="false"
            android:theme="@style/Theme.ProyectoDepSpot" />

        <activity
            android:name=".CalendarioEmocionalActivity"
            android:exported="false"
            android:theme="@style/Theme.ProyectoDepSpot" />
            
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar Cuenta"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@android:color/white" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información Personal"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Nombre"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/nombreTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#757575"
                            android:layout_marginEnd="16dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <ImageButton
                            android:id="@+id/editNombreButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="?attr/colorPrimary"
                            android:contentDescription="Editar nombre"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Apellido"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/apellidoTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#757575"
                            android:layout_marginEnd="16dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <ImageButton
                            android:id="@+id/editApellidoButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="?attr/colorPrimary"
                            android:contentDescription="Editar apellido"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Nombre de usuario"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/usernameTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#757575"
                            android:layout_marginEnd="16dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <ImageButton
                            android:id="@+id/editUsernameButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="?attr/colorPrimary"
                            android:contentDescription="Editar nombre de usuario"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información de Contacto"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Fecha de nacimiento"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/fechaNacimientoTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#757575"
                            android:layout_marginEnd="16dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <ImageButton
                            android:id="@+id/editFechaNacimientoButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="?attr/colorPrimary"
                            android:contentDescription="Editar fecha de nacimiento"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Teléfono"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/celularTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#757575"
                            android:layout_marginEnd="16dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <ImageButton
                            android:id="@+id/editCelularButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="?attr/colorPrimary"
                            android:contentDescription="Editar teléfono"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Correo electrónico"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/correoTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#757575"
                            android:layout_marginEnd="16dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <ImageButton
                            android:id="@+id/editCorreoButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="?attr/colorPrimary"
                            android:contentDescription="Editar correo electrónico"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 